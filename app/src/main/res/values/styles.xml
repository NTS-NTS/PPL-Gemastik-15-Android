<?xml version="1.0" encoding="utf-8"?>
<resources
    xmlns:tools="http://schemas.android.com/tools"
    >

    <style name="Theme.Gemastik15.Button" parent="@style/Widget.Material3.Button">
        <item name="shapeAppearance">@style/ShapeAppearance.Gemastik15.SmallComponent</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.Gemastik15.SmallComponent</item>
        <item name="android:textAppearance">@style/TextAppearance.Material3.BodyLarge</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconSize">20dp</item>
    </style>

    <style name="Theme.Gemastik15.Button.Outlined" parent="@style/Widget.Material3.Button.OutlinedButton">
        <item name="shapeAppearance">@style/ShapeAppearance.Gemastik15.SmallComponent</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.Gemastik15.SmallComponent</item>
        <item name="android:textAppearance">@style/TextAppearance.Material3.BodyLarge</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconSize">20dp</item>
    </style>

    <style name="Theme.Gemastik15.Button.Outlined.Icon" parent="Theme.Gemastik15.Button.Outlined">
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="iconTint">?attr/colorOnSurface</item>
    </style>

</resources>